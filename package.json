  "bugs": {
    "url": "https://github.com/sesac7-hello-pet-v2/PlayWright-MCP-E2E/issues"
  },
  "homepage": "https://github.com/sesac7-hello-pet-v2/PlayWright-MCP-E2E#readme",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.2",
    "cross-env": "^7.0.3"
  }
}
